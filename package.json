{
    "name": "@dhis2/ui",
    "version": "6.6.2",
    "repository": {
        "type": "git",
        "url": "https://github.com/dhis2/ui.git"
    },
    "author": "Viktor Varland <viktor@dhis2.org>",
    "contributors": [
        {
            "name": "Jan-Gerke Salomon",
            "email": "jan-gerke@dhis2.org",
            "url": "http://functionalprogramming.ninja"
        }
    ],
    "license": "BSD-3-Clause",
    "private": true,
    "workspaces": {
        "packages": [
            "utilities/*",
            "components/*",
            "collections/*",
            "storybook"
        ]
    },
    "scripts": {
        "build": "./scripts/build.js",
        "setup": "./scripts/setup.js",
        "cy:server": "yarn build && STORYBOOK_TESTING=1 yarn start",
        "cy:open": "d2-utils-cypress open --app-start 'yarn cy:server' --wait-on 'http-get://localhost:5000'",
        "cy:run": "d2-utils-cypress run --app-start 'yarn cy:server' --wait-on 'http-get://localhost:5000'",
        "docs": "d2-utils-docsite build ./docs -o ./dist --jsdoc ./*/**/src --jsdoc-output-file api.md",
        "format": "d2-style apply",
        "lint": "d2-style check",
        "test": "d2-app-scripts test",
        "start": "yarn workspace ui-storybook start",
        "demo": "yarn workspace ui-storybook build"
    },
    "d2": {
        "docsite": {
            "name": "DHIS2 UI Components",
            "description": "Components and related resources for the DHIS2 design system"
        }
    },
    "dependencies": {
        "@dhis2/app-runtime": "^2.7.1",
        "@dhis2/cli-app-scripts": "^5.7.2",
        "@dhis2/cli-style": "^8.2.0",
        "@dhis2/cli-utils-cypress": "^5.1.0",
        "@dhis2/cli-utils-docsite": "^2.0.2",
        "@dhis2/cypress-commands": "^5.1.1",
        "@dhis2/cypress-plugins": "^5.1.0",
        "@dhis2/d2-i18n": "^1.0.6",
        "@manypkg/cli": "^0.17.0",
        "@svgr/cli": "^5.5.0",
        "enzyme": "^3.11.0",
        "enzyme-adapter-react-16": "^1.15.5",
        "execa": "^4.1.0",
        "fast-glob": "^3.2.5",
        "find-up": "^5.0.0",
        "react": "16.13",
        "react-dev-utils": "^10.2.1",
        "react-dom": "16.13",
        "rimraf": "^3.0.2",
        "styled-jsx": "^3.3.0"
    }
}
